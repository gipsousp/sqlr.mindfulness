citHeader("To cite sqlr.mindfulness in publications use:")

citEntry(
  entry       = "Unpublished",
  title       = paste0("sqlr.mindfulness: ",
                       "an R package with the research compendium of the ",
                       "project: sleep and mindfulness: ",
                       "a systematic quantitative literature review"),
  author      = personList(as.person("Leticia Viana Sales"),
                           as.person("Daniel Vartanian"),
                           as.person("Ana Amelia Benedito-Silva"),
                           as.person("Mario Pedrazzoli")),
  year        = "2021",
  url         = paste0("https://gipsousp.github.io/",
                        "sqlr.mindfulness/"),
  textVersion = paste0("Sales, L. V., Vartanian, D., ",
                       "Benedito-Silva, A. A., Pedrazzoli, M. (2021). ",
                       "sqlr.mindfulness: ",
                       "an R package with the research compendium of the ",
                       "project: sleep and mindfulness: ",
                       "a systematic quantitative literature review. ",
                       "Retrieved from https://gipsousp.github.io/",
                       "sqlr.mindfulness/."),
  note        = "Lifecycle: experimental"
)
